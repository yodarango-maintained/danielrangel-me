@model string[]

<div class="sub-layout" id="layer-chapter-one">
    <h2 class="std-h2 chapter-section-title">1 ROUGH BEGININGS</h2>
    @await Html.PartialAsync("./section_one.cshtml", Model[0])
    @await Html.PartialAsync("./section_two.cshtml", Model[1])
    @await Html.PartialAsync("./section_three.cshtml", Model[2])
    @await Html.PartialAsync("./section_four.cshtml", Model[3])

    <div class="spacer-from-chapter-section"></div>

    <section class="chapter-sections-selector-wrapper">
        <div style='background-image: url("@Model[0]") ' id="chapter-one_section-one--trigger" class="focused-section chapter-section-card" data-section="1"></div>
        <div style='background-image: url("@Model[1]") ' id="chapter-one_section-two--trigger" class="chapter-section-card" data-section="2"></div>
        <div style='background-image: url("@Model[2]") ' id="chapter-one_section-three--trigger" class="chapter-section-card" data-section="3"></div>
        <div style='background-image: url("@Model[3]") ' id="chapter-one_section-four--trigger" class="chapter-section-card" data-section="4"></div>
    </section>
</div>

<script>

    const chapterOne_SectionOne = document.querySelector("#chapter-one_section-one");
    const chapterOne_SectionTwo = document.querySelector("#chapter-one_section-two");
    const chapterOne_SectionThree = document.querySelector("#chapter-one_section-three");
    const chapterOne_SectionFour = document.querySelector("#chapter-one_section-four");

    const chapterOne_SectionOne_Trigger = document.querySelector("#chapter-one_section-one--trigger");
    const chapterOne_SectionTwo_Trigger = document.querySelector("#chapter-one_section-two--trigger");
    const chapterOne_SectionThree_Trigger = document.querySelector("#chapter-one_section-three--trigger");
    const chapterOne_SectionFour_Trigger = document.querySelector("#chapter-one_section-four--trigger");

    const chooseSection = (e) => {
        const section = e.target.dataset.section;
        switch (section) {
            case '1':
                chapterOne_SectionFour.style.display = "none"
                chapterOne_SectionThree.style.display = "none"
                chapterOne_SectionTwo.style.display = "none"
                chapterOne_SectionOne.style.display = "flex"

                // add the shiny border class
                chapterOne_SectionFour_Trigger.classList.remove('focused-section')
                chapterOne_SectionThree_Trigger.classList.remove('focused-section')
                chapterOne_SectionTwo_Trigger.classList.remove('focused-section')
                chapterOne_SectionOne_Trigger.classList.add('focused-section')
                break;

            case '2':
                chapterOne_SectionFour.style.display = "none"
                chapterOne_SectionThree.style.display = "none"
                chapterOne_SectionOne.style.display = "none"
                chapterOne_SectionTwo.style.display = "flex"

                // add the shiny border class
                chapterOne_SectionFour_Trigger.classList.remove('focused-section')
                chapterOne_SectionThree_Trigger.classList.remove('focused-section')
                chapterOne_SectionOne_Trigger.classList.remove('focused-section')
                chapterOne_SectionTwo_Trigger.classList.add('focused-section')
                break;

            case '3':
                chapterOne_SectionFour.style.display = "none"
                chapterOne_SectionOne.style.display = "none"
                chapterOne_SectionTwo.style.display = "none"
                chapterOne_SectionThree.style.display = "flex"

                // add the shiny border class
                chapterOne_SectionFour_Trigger.classList.remove('focused-section')
                chapterOne_SectionOne_Trigger.classList.remove('focused-section')
                chapterOne_SectionTwo_Trigger.classList.remove('focused-section')
                chapterOne_SectionThree_Trigger.classList.add('focused-section')
                break;

            case '4':
                chapterOne_SectionOne.style.display = "none"
                chapterOne_SectionTwo.style.display = "none"
                chapterOne_SectionThree.style.display = "none"
                chapterOne_SectionFour.style.display = "flex"

                // add the shiny border class
                chapterOne_SectionOne_Trigger.classList.remove('focused-section')
                chapterOne_SectionTwo_Trigger.classList.remove('focused-section')
                chapterOne_SectionThree_Trigger.classList.remove('focused-section')
                chapterOne_SectionFour_Trigger.classList.add('focused-section')
                break;
        }
    }

    // assign click event to section card
    const chapterOne_SectionOne_Cards = document.querySelectorAll(".chapter-section-card");
    chapterOne_SectionOne_Cards.forEach(item => {
        item.addEventListener('click', chooseSection)
    })

</script>