<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] Daniel Rangel</title>
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <header>
    </header>

    <main role="main" class="page-wrapper">
        @RenderBody()
    </main>

    @* ------------------------------  Menu --------------------------  *@
    @{string currViewHome = "";
        string currViewBlogs = "";
        string currViewFavorites = "";
        string currViewTools = "";

        string viewDataHome = ViewData["Title"].ToString();
        if (viewDataHome.Contains("Welcome"))
        {
            currViewHome = "view-home";
        }
        else if (viewDataHome.Contains("Favorite"))
        {
            currViewBlogs = "view-favorites";
        }
        else if (viewDataHome.Contains("Blog"))
        {
            currViewFavorites = "view-blogs";
        }
        else if (viewDataHome.Contains("Tools"))
        {
            currViewTools = "view-tools";
        }

        string newClassHome = currViewHome;
        string newClassBlog = currViewBlogs;
        string newClassFavorite = currViewFavorites;
        string newClassTool = currViewTools;
    }
    <section class="nav-wrapper">
        <nav class="menu">
            <a asp-controller="Home" asp-action="Index" class="menu-button home @newClassHome" id="mobile-menu-bttn"></a>
            <a asp-controller="Favorites" asp-action="Index" class="menu-button favorites @newClassBlog" id="mobile-menu-bttn"></a>
            <a asp-controller="Articles" asp-action="Index" class="menu-button blog @newClassFavorite" id="mobile-menu-bttn"></a>
            <a asp-controller="Tools" asp-action="Index" class="menu-button tools @newClassTool" id="mobile-menu-bttn"></a>
        </nav>
    </section>

    @* ------------------------------ desktop menu --------------------------  *@
    <button class="menu-button-desktop--trigger" id="menu-button"></button>
    <div class="std-bkg-layer" id="dark-layer"></div>
        <nav class="menu--desktop" id="menu-wrapper">
            <a asp-controller="Home" asp-action="Index">
                <span class="menu-button menu-button-desktop home @newClassHome"></span>
                <h4 class="std-h4 menu-button--home">HOME</h4>
            </a>
            <a asp-controller="Favorites" asp-action="Index">
                <span class="menu-button menu-button-desktop favorites @newClassBlog"></span>
                <h4 class="std-h4 menu-button--favorite">FAVORITES</h4>
            </a>
            <a asp-controller="Articles" asp-action="Index">
                <span class="menu-button menu-button-desktop blog @newClassFavorite"></span>
                <h4 class="std-h4 menu-button--blogs">ARTICLES</h4>
            </a>
            <a asp-controller="Tools" asp-action="Index">
                <span class="menu-button menu-button-desktop tools @newClassTool"></span>
                <h4 class="std-h4 menu-button--tools">TOOLS</h4>
            </a>
        </nav>

    @* ------------------------------ Footer --------------------------  *@
    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2021 - MyBg - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/global.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
