@model MyBg.Models.BlogModel

@{
    ViewData["Title"] = "Edit";
}

<div class="main-wrapper main-wrapper_edit-blog">

    <a asp-action="index" asp-controller="Profile" class="std-button">👈 PROFILE</a>

    <section class="main-title-wrapper">
        <span class="post-type type_blog"></span>
        <h1 class="std-header-h1 header-h1_blog">@Model.Title</h1>
    </section>

    <form asp-action="EditBlog" asp-controller="Blogs" class="std-form form-blog">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="my-form-group">
            <input asp-for="Title" class="form-input" value="@Model.Title" />
            <span asp-validation-for="Title" class="text-danger"></span>
        </div>

        <div class="my-form-group">
            <input asp-for="Description" class="form-input" value="@Model.Description" />
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>

        <div class="my-form-group">
            <textarea asp-for="Tumbnails" class="form-input">@Model.Tumbnails</textarea>
            <span asp-validation-for="Tumbnails" class="text-danger"></span>
        </div>

        <div class="my-form-group">
            <input asp-for="Categories" class="form-input" value="@Model.Categories" />
            <span asp-validation-for="Categories" class="text-danger"></span>
        </div>

        <div class="my-form-group">
            <textarea asp-for="HTML" class="form-textarea">@Model.HTML</textarea>
            <span asp-validation-for="HTML" class="text-danger"></span>
        </div>

        <div class="buttons-wrapper">
            <button type="submit" class="std-button">SAVE</button>
        </div>

    </form>

</div>